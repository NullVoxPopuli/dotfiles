// edit this file by doing :CocConfig after coc.nvim is installed
{
  // A E S T H E T I C
  "diagnostic.errorSign": "✘",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "ⓘ",

  // worthless sources when language-server is present
  "coc.source.buffer.enable": false,
  "coc.source.file.enable": false,
  "coc.source.around.enable": false,

  // custom language server stuff
  "languageserver": {
    "ember": {
      // local, absolute path to start-server.js from unstable-language-server
      "module": "/home/lprestonsegoiii/Development/OpenSource/ember-language-server/lib/start-server.js",
      "args": ["--node-ipc"],
      "filetypes": [
        "hbs",
        "html.handlebars",
        "handlebars",
        "typescript",
        "javascript"
      ],
      "rootPatterns": ["ember-cli-build.js"],
      "requireRootPattern": true,
      "trace.server": "verbose",
      // Used for debugging
      //"execArgv": ["--nolazy", "--inspect-brk=8045"],
      "initializationOptions": {},
      "settings": {}
    }
  }
}
