// edit this file by doing :CocConfig after coc.nvim is installed
{
  // A E S T H E T I C
  "diagnostic.errorSign": "✘",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "ⓘ",

  // code lens
  "codeLens.enable": false,
  "els.codeLens.relatedFiles": true,

  // worthless sources when language-server is present
  "coc.source.buffer.enable": false,
  "coc.source.file.enable": false,
  "coc.source.around.enable": false,

  // coc-actions config
  "coc-actions.hideCursor": false,

  // explorer config
  "explorer.position": "left",
  "explorer.autoExpandMaxDepth": 1,
  "explorer.icon.enableNerdfont": true,
  "explorer.file.showHiddenFiles": true,
  // "explorer.openAction.strategy": "previousBuffer",
  "explorer.file.autoReveal": true,
  // File Info / size / created / etc
  "explorer.previewAction.onHover": false,
  "explorer.toggle": true,
  "explorer.file.hiddenRules": {
    "extensions": ["git", "swp"],
    "filenames": [],
    "patternMatches": ["^node_modules", ".git", "tmp", "dist"]
  },
  "explorer.keyMappings.global": {
    "<cr>": ["expandable?", ["expanded?", "collapse", "expand"], "open"]
  },
  "explorer.sources": [
    {
      "name": "file",
      "expand": true
    }
  ],
  "explorer.presets": {
    "simplify": {
      "file-child-template": "[selection | clip | 1] [indent][icon | 1] [filename omitCenter 1]",

      "reveal": "previousBuffer"
    }
  },

  // coc-tsserver config
  "tsserver.implicitProjectConfig.experimentalDecorators": true,
  "tsserver.maxTsServerMemory": 8196,

  // coc-tailwindcss config
  "tailwindCSS.headwind.runOnSave": false,

  // Linting
  "eslint.quiet": true,
  "eslint.packageManager": "yarn",
  "eslint.filetypes": ["javascript", "json", "typescript"],
  "eslint.autoFix": true,
  // Not technically linting... shhhh
  "prettier.eslintIntegration": true,

  // Git - integration with vim-gitgutter
  "git.addedSign.hlGroup": "GitGutterAdd",
  "git.changedSign.hlGroup": "GitGutterChange",
  "git.removedSign.hlGroup": "GitGutterDelete",
  "git.topRemovedSign.hlGroup": "GitGutterDelete",
  "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",

  // Linting (CSS) -- handled by coc-stylelintplus
  "css.validate": false,
  "scss.validate": false,
  "cSpell.userWords": [
    "nullvoxpopuli",
    "crowdstrike",
    "htmlbars",
    "mktemp",
    "qunit"
  ]
}
